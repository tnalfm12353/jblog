<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<insert id="insert" parameterType="uservo">
		<![CDATA[
			insert 
				into blog 
				values(#{id},'${name}의 블로그','/assets/images/logo.jpg')
		]]>
	</insert>
	
	<select id="findAll" parameterType="string" resultType="categoryvo">
		<![CDATA[
			select 
				no, name, blog_user_id 
				from category
				where blog_user_id = #{id}
		]]>
	</select>
	
	<update id="updateBlogInfo" parameterType="blogvo">
		<choose>
			<when test="logo == null || logo == ''">
				<![CDATA[
					update 
						blog
						set title = #{title}
						where user_id = #{userId}
				]]>
			</when>
			<otherwise>
				<![CDATA[
					update 
						blog
						set title = #{title},
							logo = #{logo} 
						where user_id = #{userId}
				]]>			
			</otherwise>
		</choose>
	</update>
</mapper>